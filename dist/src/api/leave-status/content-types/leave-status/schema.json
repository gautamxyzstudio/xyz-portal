{
    "kind": "collectionType",
    "collectionName": "leave_statuses",
    "info": {
        "singularName": "leave-status",
        "pluralName": "leave-statuses",
        "displayName": "leaveRequest",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "start_date": {
            "type": "date"
        },
        "end_date": {
            "type": "date"
        },
        "description": {
            "type": "string"
        },
        "status": {
            "type": "enumeration",
            "enum": [
                "approved",
                "pending",
                "declined"
            ]
        },
        "emp_detail": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::emp-detail.emp-detail",
            "inversedBy": "leave_status"
        },
        "decline_reason": {
            "type": "text"
        },
        "title": {
            "type": "string",
            "required": true
        },
        "leave_type": {
            "type": "enumeration",
            "enum": [
                "short_leave",
                "half_day",
                "full_day"
            ]
        },
        "is_paid": {
            "type": "boolean"
        },
        "is_first_half": {
            "type": "boolean"
        }
    }
}
