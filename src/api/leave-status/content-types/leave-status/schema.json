{
  "kind": "collectionType",
  "collectionName": "leave_statuses",
  "info": {
    "singularName": "leave-status",
    "pluralName": "leave-statuses",
    "displayName": "leaveRequest",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "start_date": {
      "type": "date"
    },
    "end_date": {
      "type": "date"
    },
    "description": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "approved",
        "pending",
        "declined"
      ]
    },
    "decline_reason": {
      "type": "text"
    },
    "title": {
      "type": "string",
      "required": true
    },
    "leave_type": {
      "type": "enumeration",
      "enum": [
        "SL",
        "CL",
        "EL",
        "un-paid"
      ]
    },
    "is_first_half": {
      "type": "boolean"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "leave_requests"
    },
    "start_time": {
      "type": "time"
    },
    "leave_duration": {
      "type": "enumeration",
      "enum": [
        "half_day",
        "full_day",
        "short_leave"
      ]
    },
    "half_day_type": {
      "type": "enumeration",
      "enum": [
        "first_half",
        "second_half"
      ]
    },
    "days": {
      "type": "json"
    }
  }
}
