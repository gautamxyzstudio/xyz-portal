{
  "kind": "collectionType",
  "collectionName": "devices",
  "info": {
    "singularName": "device",
    "pluralName": "devices",
    "displayName": "Devices",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "asset_name": {
      "type": "string",
      "required": true
    },
    "asset_id": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "laptop",
        "mouse",
        "keyboard",
        "charger",
        "other"
      ],
      "required": true
    },
    "brand": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "serial_number": {
      "type": "string"
    },
    "condition": {
      "type": "enumeration",
      "enum": [
        "new",
        "good",
        "damaged"
      ],
      "default": "new"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "available",
        "assigned",
        "returned",
        "damaged"
      ],
      "default": "available"
    },
    "description": {
      "type": "text"
    },
    "assigned_date": {
      "type": "date"
    },
    "assigned_to": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "devices"
    }
  }
}
